<div class="container">
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/add_user" class="border-shadow">
                    <span class="text-gradient">New User <i class="fas fa-user"></i></span>
                </a>
            </div>
            <%- include('./partials/messages') %>
    
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>@Email</th>
                            <th>Gender</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                            <% if(users.length){
                                for(var i = 0; i< users.length; i++) {%> 
                                    <tr>
                                        <td><%= i+1 %></td>
                                        <td><%= users[i].Name%></td>
                                        <td><%= users[i].Email%></td>
                                        <td><%= users[i].Gender%></td>
                                        <td><%= users[i].Status%></td>
                                        <td>
                                            <a href="/update_user/<%= users[i]._id%>" class="btn border-shadow update">
                                                <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                                            </a>
                                            <a class="btn border-shadow delete" data-id=<%= users[i]._id%> >
                                                <span class="text-gradient"><i class="fas fa-times"></i></span>
                                            </a>
                                        </td>
                                    </tr>
                                <% }      
                                 }else{ %>
                                        <h3>No Users for now</h3>
                                  <% } %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
</div>